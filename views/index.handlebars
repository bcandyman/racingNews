{{> navbar}}

<div class="container py-4 mb-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card mt-4 header">
        <div class="card-header">
          <h2 class="card-title text-center">{{pageHeader}} Articles</h2>
        </div>
        <div class="card-body">
          {{#each data}}
          <div class="article-parent" data-id={{this._id}}>
            <div class="row">
              <div class="col-12 article-parent">
                <a href={{this.link}}>
                  <h5 class="text-center">{{this.title}}</h5>
                  <p>{{this.content}}</p>
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col-2 offset-5">
                {{#if this.comment}}
                <button class="btn view-comments" data-toggle="modal" data-link={{link}} data-target="#myModal"
                  inputtype="submit"><i class="commented far fa-comment fa-lg"></i></button>
                {{else}}
                <button class="btn view-comments" data-toggle="modal" data-link={{link}} data-target="#myModal"
                  inputtype="submit"><i class="far fa-comment fa-lg"></i></button>
                {{/if}}
              </div>
            </div>
            <hr my-3>
          </div>
          {{/each}}
          <a href="/">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Modal --}}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content header">
      <div>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Comments</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="comment-title" class="col-form-label">Comment Title:</label>
              <input type="text" class="form-control" id="comment-title">
            </div>
            <div class="form-group">
              <label for="comment-body" class="col-form-label">Comment Body:</label>
              <textarea class="form-control" id="comment-body"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer border-top-0">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-success" id="submit-comment">Submit Comment</button>
        </div>
      </div>
      <hr>
      <div class="modal-body existing-comments"></div>
    </div>
    <hr>
  </div>
</div>